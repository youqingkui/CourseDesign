extends layout

block content
  if errorMsg
    div.alert.alert-danger= errorMsg
  else if successMsg
    div.alert.alert-success= successMsg
  form(method='post', action='/addFllor' class="form-inline").
    <div class="form-group">
      <label class='' for="layers">层数</label>
      <input type="number" class="form-control" id="layers" name="layers" placeholder="" value="1" max="100">
    </div>
    <div class="form-group">
      <label class="" for="room">房间号</label>
      <input type="number" class="form-control" id="roomNumber" name="roomNumber" placeholder="" min="101">
    </div>
    <button type="submit" class="btn btn-default">新建</button>