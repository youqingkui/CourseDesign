extends layout

block content
  if errorMsg
    div.alert.alert-danger= errorMsg
  else if successMsg
    div.alert.alert-success= successMsg
  form(method='post', action='/fllors/edit/' class="form-inline").
    <div class="form-group">
      <label class='' for="layers">层数</label>
      <input type="number" class="form-control" id="layers" name="layers" placeholder="" value=#{fllor.layers} max="100">
    </div>
    <div class="form-group">
      <label class="" for="room">房间号</label>
      <input type="number" class="form-control" id="roomNumber" name="roomNumber" placeholder="" min="101" value=#{fllor.name}>
    </div>
    <div class="form-group">
      <label class="" for="area">面积大小</label>
      <input type="text" class="form-control" id="area" name="area" placeholder="" value=#{fllor.area} >
    </div>
    <div class="form-group">
      <label class="" for="structure">房屋结构</label>
      <input type="text" class="form-control" id="structure" name="structure" placeholder="" value=#{fllor.structure}>
    </div>
    <input type ="hidden" name="fllorID" value=#{fllor.ID}>
    <button type="submit" class="btn btn-default">修改</button>