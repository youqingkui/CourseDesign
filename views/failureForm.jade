extends layout

block content
  
  if err
    div.alert.alert-danger= err
  
  else if success
    div.alert.alert-success= success
    
  div.row.col-md-offset-4
    form(method='post', action='' class="form-horizontal" id="addHolder").
      <div class="form-group">
        <div class="col-md-6">
          <label class='' for="holderName">联系人</label>
          <input type="text" class="form-control" id="holderName" name="holderName" placeholder="" />
        </div>
      </div>
      <div class="form-group">
      <div class="col-md-6">
        <label class="" for="phoneNum">手机号码</label>
        <input type="text" class="form-control" id="phoneNum" name="phoneNum" placeholder="">
      </div>
      </div>
      <div class="form-group">
        <div class="col-md-6">
          <label class='' for="fllorName">房间号码</label>
          <input type="text" class="form-control" id="fllorName" name="fllorName" placeholder="" />
        </div>
      </div>
      <div class="form-group">
        <div class = "col-md-6">
          <label class="" for="content">问题描述</label>
          <textarea class="form-control" id="content" name="content" rows="3"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class = "col-md-6">
        <button type="submit" class="btn btn-default">提交</button>
        </div>
      </div>