extends layout

block content
  if err
    div.alert.alert-danger= err

  else if success
    div.alert.alert-success= success
  
    
  div.row.col-md-offset-4
    form(method='post', action='/costs/add' class="form-horizontal" id="addCost").
      <div class="form-group">
        <div class="col-md-6">
          <label class='' for="fllorName">房间号码</label>
          <input type="text" class="form-control" id="fllorName" name="fllorName" placeholder="" />
        </div>
      </div>
      <div class="form-group">
      <div class="col-md-6">
        <label class="" for="waterCost">水费</label>
        <input type="number" class="form-control" id="waterCost" name="waterCost" placeholder="">
      </div>
      </div>
      <div class="form-group">
        <div class = "col-md-6">
          <label class="" for="electricityCost">电费</label>
          <input type="number" class="form-control" id="electricityCost" name="electricityCost" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class ="col-md-6">
        <label class="" for="otherCost">其他费用</label>
        <input type="number" class="form-control" id="otherCost" name="otherCost" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class = "col-md-6">
          <label class="" for="date">日期</label>
          <input type="month" class="form-control" id="date" name="date" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class = "col-md-6">
        <button type="submit" class="btn btn-default">添加</button>
        </div>
      </div>