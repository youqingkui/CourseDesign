extends layout

block content
  
  if errorMsg
    div.alert.alert-danger= errorMsg
  
  else if successMsg
    div.alert.alert-success= successMsg
    
  div.row.col-md-offset-4
    form(method='post', action='/editHolder/' class="form-horizontal" id="addHolder").
      <div class="form-group">
        <div class="col-xs-6">
          
          <label class='' for="holderName">户主姓名</label>
          <input type="text" class="form-control" id="holderName" name="holderName" placeholder="" value= #{holder[0].holderName} >
        </div>
      </div>
      <div class="form-group">
      <div class="col-xs-6">
        <label class="" for="phoneNum">手机号码</label>
        <input type="text" class="form-control" id="phoneNum" name="phoneNum" placeholder="" value=#{holder[0].phoneNum}>
      </div>
      </div>
      <div class="form-group">
        <div class = "col-xs-6">
          <label class="" for="identityNum">身份证号码</label>
          <input type="text" class="form-control" id="identityNum" name="identityNum" placeholder="" value=#{holder[0].identityNum}>
        </div>
      </div>
      <div class="form-group">
        <div class ="col-xs-6">
        <label class="" for="date">入住时间</label>
        <input type="date" class="form-control" id="date" name="date" placeholder="" value=#{holder[0].date}>
        </div>
      </div>
      <div class="form-group">
        <div class = "col-xs-6">
          <label class="" for="fllorName">入住房号</label>
          <input type="text" class="form-control" id="fllorName" name="fllorName" placeholder="" value=#{holder[0].fllorName}>
        </div>
      </div>
      <div class="form-group">
        <div class = "col-xs-6">
        <button type="submit" class="btn btn-default">新建</button>
        <input type ="hidden" name="holderID" value=#{holder[0].ID}>
        </div>
      </div>