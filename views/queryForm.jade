extends layout

block content
  
  if err
    div.alert.alert-danger= err
  
  else if success
    div.alert.alert-success= success
    
  div.row.col-md-offset-4
    form(method='post', action='' class="form-horizontal" id="addHolder").
      <div class="form-group">
        <div class="col-xs-6">
          <label class='' for="holderName">户主姓名</label>
          <input type="text" class="form-control" id="holderName" name="holderName" placeholder="" />
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-6">
          <label class='' for="fllorName">房间号码</label>
          <input type="text" class="form-control" id="fllorName" name="fllorName" placeholder="" />
        </div>
      </div>
      <div class="form-group">
      <div class="col-xs-6">
        <label class="" for="phoneNum">手机号码</label>
        <input type="text" class="form-control" id="phoneNum" name="phoneNum" placeholder="">
      </div>
      </div>
      <div class="form-group">
        <div class = "col-xs-6">
          <label class="" for="identityNum">身份证号码</label>
          <input type="text" class="form-control" id="identityNum" name="identityNum" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class ="col-xs-6">
        <label class="" for="date">查询月份</label>
        <input type="month" class="form-control" id="date" name="date" placeholder="">
